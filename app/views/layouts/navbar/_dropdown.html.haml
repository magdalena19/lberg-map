-# Places Menu
%li.pull-right.dropdown.navbar-dropdown{'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: t('.settings')}
  .pull-right.glyphicon.glyphicon-cog.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
    %span.caret
  %ul.dropdown-menu
    - if @current_user.registered?
      %li= link_to(t('.edit_user'), edit_user_path(@current_user.id))
      %hr
    - if @current_user.admin?
      .dropdown-header
        = t('.admin_tasks')
      %li= link_to(t('.user_management'), admin_index_users_path)
      %li= link_to(t('.app_settings'), admin_settings_path)
      %hr
    .dropdown-header
      = t('language')
    - I18n.available_locales.each do |l|
      %li{class: "#{'active' if l == locale}"}
        = link_to l.to_s, locale: l.to_s
