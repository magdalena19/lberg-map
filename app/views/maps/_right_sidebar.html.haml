.overlay.control-container.right-sidebar-tray.tile-layers-tray.closed
  - Map::TILE_LAYERS.each do |name, attr|
    .control-button.select-tile-layer{data: { url: attr[:url], attribution: attr[:attribution] }}
      = image_tag attr[:image_url]

.overlay.control-container.right-sidebar-tray.create-place-methods-tray.closed
  .add-place-via-address-search
    .glyphicon.fa.fa-search
    = t('.search_address')
  .add-place-manually
    .glyphicon.fa.fa-keyboard-o
    = t('.type_in_address')
  .add-place-via-click
    .glyphicon.fa.fa-mouse-pointer
    = t('.click_on_map')
  .add-place-via-location
    .glyphicon.fa.fa-crosshairs
    = t('.add_via_location')

.map-controls-container
  .overlay.control-container.zoom-container
    %span.control-button.zoom-in.icon.glyphicon.fa.fa-plus{data: { toggle: 'tooltip', placement: 'left' }, title: t('.zoom_in')}

    %span.control-button.glyphicon.fa.fa-minus.zoom-out{data: { toggle: 'tooltip', placement: 'left' }, title: t('.zoom_out')}

    %span.control-button.zoom-to-bbox.glyphicon.fa.fa-compress{data: { toggle: 'tooltip', placement: 'left'  }, title: t('.fit_to_bbox')}

    %span.control-button.toggle-show-geolocation.inactive.glyphicon.fa.fa-crosshairs{data: { toggle: 'tooltip', placement: 'left' }, title: t('.show_current_position')}

  .overlay.control-container.map-info-container
    %span.control-button.show-map-description.glyphicon.fa.fa-info{data: { toggle: 'tooltip', placement: 'left' }, title: t('.show_map_description')}

    %span.control-button.glyphicon.choose-background-layer{data: { toggle: 'tooltip', placement: 'left' }, title: t('.choose_background_layer'), tray: '.tile-layers-tray'}
      = image_tag('tile_layers_button.svg')

    %span.control-button.show-places-index.glyphicon.fa.fa-list-alt{data: { toggle: 'tooltip', placement: 'left' }, title: t('.show_places_list')}

  - if can_contribute?
    .overlay.control-container.place-control-container
      %span.control-button.add-place-button.glyphicon{data: { toggle: 'tooltip', placement: 'left' }, title: t('.new_place'), tray: '.create-place-methods-tray'}
        = image_tag('marker_button.png')

