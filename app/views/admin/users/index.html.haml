- content_for :header do
  = t('.index')

.container
  %table
    %thead
      %tr
        %th= t('.name')
        %th= t('.email')
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr{id: "user_#{user.id}"}
          %td= user.name
          %td= user.email
          %td= link_to t('.edit'), edit_admin_user_url(user)
          %td= link_to t('.delete'), admin_user_url(user), :method => :delete, :data => { :confirm => t('.confirm_deletion') }

  %br

  = link_to 'New User', new_admin_user_url
