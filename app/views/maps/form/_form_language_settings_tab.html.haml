.tab-pane#language_settings
  .map_language_settings
    .row
      .spacer-row
      .col-xs-8
        .checkbox
          %label
            = f.check_box :auto_translate
          = t('.auto_translate')
      .col-xs-4
        = f.collection_select :translation_engine, Admin::Setting.translation_engines, :to_s, :humanize
    .row
      .col-xs-12
        %h4= t('.supported_languages')
        - I18n.available_locales.each do |locale|
          .row
            .col-xs-12
              .checkbox
                %label
                  - if @map.new_record?
                    = check_box_tag 'map[supported_languages][]', locale, locale == I18n.locale ? true : false
                  - else
                    = check_box_tag 'map[supported_languages][]', locale, @map.supported_languages.include?(locale.to_s) ? true : false
                = t("languages.#{locale}") + " (#{locale})"
