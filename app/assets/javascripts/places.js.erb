jQuery(function() {
  nicEditors.allTextAreas(
    {
      iconsPath : '<%= image_path 'nicEditorIcons.gif' %>',
      buttonList : [
        'forecolor',
        'fontSize',
        'bold',
        'italic',
        'underline',
        'hr',
        'link',
        'unlink',
        'ol',
        'ul',
        'left',
        'center',
        'right',
        'justify',
      ],
    }
  );

  // responsive width
  $( window ).resize(function() {
    $('.nicEdit-panelContain').parent().css('width', '100%');
    $('.nicEdit-main').parent().css('width', '100%');
  });

  // show process widget on place submit

  jQuery('.submit-place-button').on('click', function(){
    var submitProcessBar = jQuery('.submit-process-bar')
    submitProcessBar.show();
    jQuery('.submit-place-button').hide();
    jQuery('.cancel-button').hide();
    jQuery('.back-button').hide();
  });
});
