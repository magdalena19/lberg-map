- content_for :header do
  = t('.settings')

.container
  %h1
    Jojo
  = form_for(@settings, url: admin_settings_path) do |f|
    - @settings_hash.each do |option, value|
      .row
        = f.label option
        - if is_boolean value
          .col-xs-3.form-group
            = f.check_box "#{option}"
        - elsif is_string value
          .col-xs-3.form-group
            = f.text_field "#{option}"
    .row
      .col-xs-2
        = f.submit class: 'btn btn-primary btn-success'
      .col-xs-2
        = link_to t('buttons.back'), '', class: 'btn btn-primary btn-danger back-button'
