- content_for :header do
  = t('.places')

.container
  .row
    .col-xs-12
      .row
        %hr
        .col-xs-12
          .row
            .col-xs-3
              %b= t('.name')
            .col-xs-4
              %b= t('.address')
            .col-xs-3
              %b= t('.categories', scope: [:activerecord, :attributes, :place])
      .row
        .col-xs-12
          - @places.each do |place|
            .row
              %hr
              .col-xs-3
                = place.name
              .col-xs-4
                = place.address
              .col-xs-3
                - if place.category_ids
                  - place.category_ids.each do |id|
                    = category_link(id)
              .col-xs-2
                - if place.reviewed?
                  = link_to edit_place_path(place) do
                    %span{class: 'glyphicon glyphicon-pencil'}
                - else
                  %b{style: 'color: #ff6666;'}= t('.waiting_for_review')
                - if signed_in?
                  = link_to place_path(place), {method: "delete", data: { confirm: t('.confirm_delete') }} do
                    %span{class: 'glyphicon glyphicon-trash'}
