- content_for :header do
  = t('.new')

.container
  = form_for(@user) do |f|
    .row
      .col-md-6.col-md-offset-3.text-center
        %fieldset.form-group
          = text_field_tag :activation_token, '', placeholder: t('.activation_token'), class: 'form-control'
        %fieldset.form-group{ class: "#{"has-error" if f.object.errors.include?(:name)}" }
          = f.text_field :name, placeholder: t('.name'), class: 'form-control'
        %fieldset.form-group{ class: "#{"has-error" if f.object.errors.include?(:email)}" }
          = f.text_field :email, placeholder: t('.email'), class: 'form-control'
        %fieldset.form-group{ class: "#{"has-error" if f.object.errors.include?(:password)}" }
          = f.password_field :password, placeholder: t('.password'), class: 'form-control'
        %fieldset.form-group{ class: "#{"has-error" if f.object.errors.include?(:password_confirmation)}" }
          = f.password_field :password_confirmation, placeholder: t('.password_confirmation'), class: 'form-control'
    .row
      .col-xs-3.col-md-offset-3
        = f.submit t('.sign_up'), class: 'btn btn-primary btn-success'
      .col-xs-3
        = link_to t('buttons.back'), admin_users_url, class: 'btn btn-primary btn-danger place-form-button back-button'
