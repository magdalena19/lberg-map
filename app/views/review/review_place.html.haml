- content_for :header do
  - if @reviewed_place
    = t('review') + ' ' + @reviewed_place.name
  - else
    = t('review') + ' ' + @unreviewed_place.name

.container
  .row.margin-below
    .col-md-6
      %h3 Reviewed
      %br
      .row
        - if @reviewed_place
          .col-xs-12
            %h4
              = @reviewed_place.name
          .col-xs-8
            = @reviewed_place.address
          .col-xs-4
            %b Categories:
            - if @reviewed_place.category_names.empty?
              = t('none')
            - else
              = @reviewed_place.category_names.join(', ')
        - else
          .col-xs-12
            no reviewed place

    .col-md-6.unreviewed-container
      %h3 Unreviewed
      %br
      .row
        - if @unreviewed_place
          .col-xs-12
            %h4
              = @unreviewed_place.name
          .col-xs-8
            = @unreviewed_place.address
          .col-xs-4
            %b Categories:
            - if @unreviewed_place.category_names.empty?
              = t('none')
            - else
              = @unreviewed_place.category_names.join(', ')
        - else
          .col-xs-12
            no unreviewed place

  .row
    .col-md-6
    .col-md-6
      = link_to 'Confirm', confirm_place_path, class: 'btn btn-primary btn-success'
      = link_to 'Refuse', refuse_place_path, class: 'btn btn-primary btn-danger'

  .row
    .col-xs-12.margin-below
      %h3= t('descriptions')
    .col-xs-12.grey
      - @unreviewed_place.translations.each do |t|
        = t.description
        %hr
