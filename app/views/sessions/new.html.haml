.container
  = form_for(:sessions, url: login_path) do |f|
    .row
      .col-md-6.col-md-offset-3.text-center
        %h4
          = t('.log_in')
        %fieldset{class: 'form-group'}
          = f.text_field :email, placeholder: t('.enter_email'), class: 'form-control'
        %fieldset{class: 'form-group'}
          = f.password_field :password, placeholder: t('.enter_password'), class: 'form-control'
    .row
      .col-sm-2.col-sm-offset-5
        = f.submit t('buttons.login'), class: 'btn btn-primary btn-success'
    .row{style: 'padding-top: 10px;'}
      .col-sm-2.col-sm-offset-5.text-center
        = link_to t('forgot_password?'), request_password_reset_url
    .row{style: 'padding-top: 10px;'}
      .col-sm-4.col-sm-offset-4.text-center
        %i
          = t('.sign_up_info', link: link_to(t('.here'), sign_up_path)).html_safe
