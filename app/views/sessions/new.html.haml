- content_for :header do
  = t('log_in')

.container
  = form_for(:sessions, url: login_path) do |f|
    .row
      .col-md-6.col-md-offset-3.text-center
        %fieldset{class: 'form-group'}
          = f.text_field :email, placeholder: t('email_placeholder', scope: 'user_session'), class: 'form-control'
        %fieldset{class: 'form-group'}
          = f.password_field :password, placeholder: t('password_placeholder', scope: 'user_session'), class: 'form-control'
    .row
      .col-xs-3.col-md-offset-3
        = f.submit 'Login', class: 'btn btn-primary btn-success'
