%nav.navbar.navbar-fixed-top
  .container.navbar-container
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a
        .logo.logo-left
          KIEZ
        .logo.logo-right
          KARTE
      .navbar-button.home-button.pull-left{class: "#{'active' if current_page?(about_path)}"}
        = link_to root_path do
          .glyphicon.glyphicon-globe.green{'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: t('.to_the_map')}
      .navbar-button.home-button.pull-left{class: "#{'active' if current_page?(about_path)}"}
        = link_to places_path do
          .glyphicon.glyphicon-list.green{'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: t('.to_the_list')}

    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav
        - if @current_user.signed_in?
          .margin-right.navbar-button.pull-right{class: "#{'active' if current_page?(contact_path)}"}
            = link_to logout_path do
              .glyphicon.glyphicon-log-out.green{'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: t('.logout')}
        - else
          .margin-right.navbar-button.pull-right{class: "#{'active' if current_page?(contact_path)}"}
            = link_to login_path do
              .glyphicon.glyphicon-log-in.green{'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: t('.login')}

        .navbar-button.info-button.pull-left{class: "#{'active' if current_page?(about_path)}"}
          = link_to about_path do
            .glyphicon.glyphicon-info-sign.green{'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: t('.about')}
        .navbar-button.contact-button.pull-left{class: "#{'active' if current_page?(contact_path)}"}
          = link_to contact_path do
            .glyphicon.glyphicon-envelope.green{'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: t('.contact')}

        - if @current_user.signed_in?
          .navbar-button.pull-right{class: "#{'active' if current_page?(places_review_index_path)}"}
            = link_to places_review_index_path do
              .glyphicon.glyphicon-thumbs-up.green{'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: t('.review')}
        = render partial: 'layouts/navbar/dropdown'
