.container
  %h4 Available categories
  %ul
    - all_categories.each do |category|
      %li
        = link_to category, tag_path(category)
.container
  %h4 Available POIs

  %table.table.table-condensed.table-hover
    %thead
      %th.col-md-1
      %th Name
      %th Adresse
      %th Categories
      %th.col-md-1 Latitude
      %th.col-md-1 Longitude
    %tbody
    - @places.each do |place|
      %tr
        %td
          = link_to 'details', ''
          = link_to 'edit', edit_place_path(place)
          = link_to 'delete', place_path(place), {method: "delete", data: { confirm: "Bist du dir sicher, dass du den Eintrag l√∂schen willst?" }}
        %td
          = place.name
        %td
          = place.address
        %td
          - place.tag_list.map do |tag|
            = link_to tag, tag_path(tag)
        %td
          = place.latitude
        %td
          = place.longitude
