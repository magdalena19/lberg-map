.container
  = form_for(:sessions, url: login_path) do |f|
    .row
      .col-md-6.col-md-offset-3.text-center
        %h4
          = t('.log_in')
        %fieldset{class: 'form-group'}
          = f.text_field :email, placeholder: t('.enter_email'), class: 'form-control'
        %fieldset{class: 'form-group'}
          = f.password_field :password, placeholder: t('.enter_password'), class: 'form-control'
    .row
      .col-xs-2.col-md-offset-5
        = f.submit 'Login', class: 'btn btn-primary btn-success'
