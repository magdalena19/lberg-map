- content_for :header do
  = t('.settings')

.container
  %h1
    Jojo
  = form_for(@settings, url: admin_settings_path) do |f|
    %fieldset{ class: 'form-group row' }
      .col-xs-3
        = f.label :auto_translate
      .col-xs-3
        = f.check_box :auto_translate

    %fieldset{ class: 'form-group row' }
      .col-xs-3
        = f.label :translation_engine
      .col-xs-3
        = f.collection_select :translation_engine, Admin::Setting.translation_engines, :to_s, :humanize

    %fieldset{ class: 'form-group row' }
      .col-xs-3
        = f.label :allow_guest_commits
      .col-xs-3
        = f.check_box :allow_guest_commits

    %fieldset{ class: 'form-group row' }
      .col-xs-3
        = f.label :is_private
      .col-xs-3
        = f.check_box :is_private

    %fieldset{ class: 'form-group row' }
      .col-xs-3
        = f.label :app_title
      .col-xs-3
        = f.text_field :app_title

    %fieldset{ class: 'form-group row' }
      .col-xs-3
        = f.label :maintainer_email_address
      .col-xs-3
        = f.text_field :maintainer_email_address

    .row
      .col-xs-2
        = f.submit class: 'btn btn-primary btn-success'
      .col-xs-2
        = link_to t('buttons.back'), '', class: 'btn btn-primary btn-danger back-button'
